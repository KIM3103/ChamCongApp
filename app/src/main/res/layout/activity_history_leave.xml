<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử nghỉ phép"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Hàng chứa Avatar và Tên nhân viên -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:contentDescription="Avatar nhân viên"
            android:layout_marginEnd="16dp" />

        <!-- Tên nhân viên -->
        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bùi Tiến Thịnh"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Hàng chứa 3 button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <!-- Button tổng ngày nghỉ -->
        <Button
            android:id="@+id/btnTotalLeave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng ngày nghỉ" />

        <!-- Button nghỉ có phép -->
        <Button
            android:id="@+id/btnLeaveWithPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nghỉ có phép"/>

        <!-- Button nghỉ không phép -->
        <Button
            android:id="@+id/btnLeaveWithoutPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nghỉ không phép"/>
    </LinearLayout>

</LinearLayout>
